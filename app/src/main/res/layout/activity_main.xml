<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/whatsfordinner"
        android:layout_width ="400dp"
        android:layout_height ="180dp"
        android:src="@drawable/whatsfordinner"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/meals"
                android:gravity="center"
                android:paddingBottom="140dp"
                android:paddingLeft="-120dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="Meals"
                android:id="@+id/meals_icon"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/recipe"
                android:paddingBottom="140dp"
                android:paddingLeft="-120dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="Recipes"
                android:id="@+id/recipes_icon"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/groceries"
                android:gravity="center"
                android:paddingBottom="140dp"
                android:paddingLeft="-100dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="Groceries"
                android:id="@+id/groceries_icon"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/new_dish"
                android:gravity="center"
                android:paddingBottom="140dp"
                android:paddingLeft="-100dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="New Dish"
                android:id="@+id/new_dish_icon"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
